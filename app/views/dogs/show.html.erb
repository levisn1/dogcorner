<div class="container">
  <div class="container-main">
    <div class="basic-info-show" data-spy="affix" bottom-offset="1000">
      <% if current_user != @dog.user %>
      <span><h4>Name: </h4><p><%= @dog.name %></p></span>
      <h4>Age: </h4><p><%= @dog.age %></p>
      <h4>Pedigree: </h4><p><%= @dog.pedigree %></p>
      <h4>Breed: </h4><p><%= @dog.breed.name %></p>
      <h4>Address: </h4><p><%= @dog.address %></p>
      <button type="button" class="btn request-appt" data-toggle="modal" data-target="#exampleModal">
        Ask <%= @dog.user.first_name %> to meet <%= @dog.name %>
      </button>
      <% else %>
      <%= link_to("This is your dog!! Go to dashboard", dashboard_path, html_options = {class: "btn btn-primary"}) %>
      <% end %>
    </div>
  </div>

  <div class="photo-container" style="background-image: url(<%= @dog.photo %>);">
  </div>

  <div class="description col-sm-6 col-offset-sm-6">
    <h4>Description: </h4><p><%= @dog.description %></p>
  </div>

  <div
  id="map"
  class="show-map"
  data-markers="<%= @marker.to_json %>"
  ></div>

  <%= render 'shared/modal' %>
</div>



