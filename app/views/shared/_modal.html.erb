<div class="modal fade" id="exampleModal" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="exampleModalLabel">Modal title</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <% if current_user != @dog.user %>
          <h4>Contact <%= @dog.user.first_name %> to request an appointment to see <%= @dog.name %> the dog</h4>
          <%= simple_form_for([@dog, @appointment]) do |f| %>
          <%= f.input :date, as: :date, html5: true %>
          <%= f.input :message %>
          <div class="modal-footer">
          <%= f.button :submit, :label_html => { class: 'btn-dark' } %>
        </div>
        <% end %>
        <% else %>
        <%= link_to("This is your dog!! Go to dashboard", dashboard_path, html_options = {class: "btn btn-primary"}) %>
        <% end %>
      </div>
    </div>
  </div>
</div>
